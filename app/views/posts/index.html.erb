<%# <h1>トップページ</h1>
<%= link_to '新規投稿', '/posts/new' %>
<%# ↑↓newとcreateファイル消してメモ投稿のフォームがなくなってしまった為書き換え %>
<h1>AjaxApp</h1>
<%= form_with url:  "/posts", method: :post,id: "form" do |form| %>
  <%= form.text_field :content , id: "content" %>
  <%= form.submit '投稿する' , id: "submit" %>
  <%# #getElementByIdを用いて「投稿する」↑ボタンの情報を取得 %>
<% end %>

<%# ↓投稿後にメモを追加する要素として %>
<div id="list">
</div>


<% @posts.each do |post| %>
  <%# <%= post.content %>
  <%# <%= post.created_at %>
  <%# <div class="post"> %>
                            <%# カスタムデータ属性を追加  メモのidと既読の有無を管理%>
  <div class="post" data-id=<%= post.id %> data-check=<%= post.checked %>>
    <div class="post-date">
      投稿日時：<%= post.created_at %>
    </div>
    <div class="post-content">
      <%= post.content %>
    </div>
  </div>
<% end %>
